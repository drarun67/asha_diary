<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header with gradient -->
        <View
            android:id="@+id/header_gradient"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:background="@drawable/gradient_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/reg_title"
            android:textColor="@color/text_on_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 3D Card for form -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_form"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:elevation="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Name with Voice Input -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reg_name"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_card_3d"
                        android:hint="@string/reg_name"
                        android:inputType="none"
                        android:padding="16dp"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/btn_voice_name"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/gradient_primary"
                        android:contentDescription="@string/voice_button_hint"
                        android:src="@android:drawable/ic_btn_speak_now"
                        android:tint="@color/text_on_primary" />
                </LinearLayout>

                <!-- Father/Husband Name with Voice -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/reg_father_husband_name"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_father_husband_name"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_card_3d"
                        android:hint="@string/reg_father_husband_name"
                        android:inputType="none"
                        android:padding="16dp"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/btn_voice_father"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/gradient_primary"
                        android:contentDescription="@string/voice_button_hint"
                        android:src="@android:drawable/ic_btn_speak_now"
                        android:tint="@color/text_on_primary" />
                </LinearLayout>

                <!-- Gender Chips (No keyboard) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/reg_gender"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:checkedChip="@id/chip_female"
                    app:selectionRequired="true"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_male"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reg_gender_male" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_female"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reg_gender_female" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_other"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reg_gender_other" />
                </com.google.android.material.chip.ChipGroup>

                <!-- Age Picker (No keyboard) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/reg_age"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <NumberPicker
                    android:id="@+id/picker_age"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp" />

                <!-- Village Spinner -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/reg_village"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinner_village"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_card_3d"
                    android:padding="16dp" />

                <!-- Address with Voice -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/reg_address"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_address"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_card_3d"
                        android:gravity="top"
                        android:hint="@string/reg_address"
                        android:inputType="none"
                        android:padding="16dp" />

                    <ImageButton
                        android:id="@+id/btn_voice_address"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/gradient_primary"
                        android:contentDescription="@string/voice_button_hint"
                        android:src="@android:drawable/ic_btn_speak_now"
                        android:tint="@color/text_on_primary" />
                </LinearLayout>

                <!-- Mobile Number (Optional) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/reg_mobile"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_card_3d"
                    android:hint="@string/reg_mobile"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:padding="16dp" />

                <!-- Fingerprint Capture Button -->
                <Button
                    android:id="@+id/btn_capture_fingerprint"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/gradient_primary"
                    android:text="@string/reg_capture_fingerprint"
                    android:textColor="@color/text_on_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_fingerprint_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/success"
                    android:textSize="14sp"
                    android:visibility="gone"
                    tools:text="फिंगरप्रिंट कैप्चर हो गया (गुणवत्ता: 85)"
                    tools:visibility="visible" />

                <!-- Register Button -->
                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/gradient_primary"
                    android:elevation="4dp"
                    android:text="@string/reg_register"
                    android:textColor="@color/text_on_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Offline Indicator -->
        <include
            android:id="@+id/offline_indicator"
            layout="@layout/view_offline_indicator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_form" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
